			<field name="orderby"
				type="list"
				description="JGLOBAL_ARTICLE_ORDER_DESC"
				label="JGLOBAL_ARTICLE_ORDER_LABEL"
				>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="a.created ">{{extension.element.upper}}_CREATED</option>
				<option value="a.publish_up">{{extension.element.upper}}_PUBLISH_UP</option>
				<option value="a.publish_down">{{extension.element.upper}}_PUBLISHED_DOWN</option>
				<option value="a.modified">{{extension.element.upper}}_MODIFIED</option>
				<option value="a.title">JGLOBAL_TITLE</option>
				<option value="a.ordering">JGLOBAL_ORDERING</option>
			</field>

			<field name="order_dir"
				type="list"
				label="{{extension.element.upper}}_ORDER_DIR"
				>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="ASC">{{extension.element.upper}}_ORDER_DIR_ASC</option>
				<option value="DESC">{{extension.element.upper}}_ORDER_DIR_DESC</option>
			</field>

			<field name="show_pagination"
				type="list"
				description="JGLOBAL_PAGINATION_DESC"
				label="JGLOBAL_PAGINATION_LABEL"
				>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
				<option value="2">JGLOBAL_AUTO</option>
			</field>

			<field name="show_pagination_results"
				type="list"
				label="JGLOBAL_PAGINATION_RESULTS_LABEL"
				description="JGLOBAL_PAGINATION_RESULTS_DESC">

				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

		</fieldset>

		<fieldset name="item"
			label="{{extension.element.upper}}_ITEM_SETTINGS">

			<field name="link_titles"
				type="list"
				description="JGLOBAL_LINKED_TITLES_DESC"
				label="JGLOBAL_LINKED_TITLES_LABEL"
				>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>

			<field name="link_titles_in_list"
				type="list"
				description="{{extension.element.upper}}_LINKED_TITLES_IN_LIST_DESC"
